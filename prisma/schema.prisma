generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlantRegion {
  CHINA
  USA
  CANADA
  FRANCE
  JAPAN
  AUSTRALIA
  SOUTH_AFRICA
  MEXICO
  INDIA
  BRAZIL
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  name     String
  posts    Post[]
  garden   Garden?
  friends Friend[]
}

model Friend {
  id       String   @id @default(uuid())
  friendName String
  friendUsername String
  userId String
  user User @relation(fields: [userId], references:[id])
}

model Post {
  id        String  @id @default(uuid())
  title     String
  image     String
  authorId  String
  author    User    @relation(fields: [authorId], references: [id])
}

model Garden {
  id      String   @id @default(uuid())
  userId  String   @unique
  user    User     @relation(fields: [userId], references: [id])
  plants  Plant[]
}

model Plant {
  id          String      @id @default(uuid())
  gardenId String
  garden Garden @relation(fields:[gardenId], references:[id])
  plantTypeId String
  plantType PlantType @relation(fields:[plantTypeId], references:[id])
}

model PlantType {
  id          String      @id @default(uuid())
  imageUrl    String
  plantRegion PlantRegion
  plants Plant[]
}
