generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlantRegion {
  CHINA
  US
  CANADA
  FRANCE
  ITALY
  GERMANY
  UK
  MEXICO
  MONGOLIA
  BRAZIL
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  name     String
  posts    Post[]
  garden   Garden?  @relation("UserGarden")
}

model Post {
  id        String  @id @default(uuid())
  title     String
  image     String
  authorId  String
  author    User    @relation(fields: [authorId], references: [id])
}

model Garden {
  id      String   @id @default(uuid())
  userId  String   @unique
  user    User     @relation("UserGarden", fields: [userId], references: [id])
  plants  Plant[]  @relation("GardenPlants") // many-to-many link
}

model Plant {
  id          String      @id @default(uuid())
  imageUrl    String
  plantRegion PlantRegion
  gardens     Garden[]    @relation("GardenPlants") // many-to-many link
}
